<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:src="@drawable/crypto_tool_logo" 
            android:contentDescription="@string/logo_description"/>

        <Button
            android:id="@+id/buttonEncrypt"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_shape"
            android:drawableRight="@drawable/button_lockclosed"
            android:onClick="encrypt"
            android:paddingLeft="20dp"
            android:text="@string/action_encrypt" />

        <Button
            android:id="@+id/buttonDecrypt"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_shape"
            android:drawableRight="@drawable/button_lockopen"
            android:onClick="decrypt"
            android:paddingLeft="20dp"
            android:text="@string/action_decrypt" />

        <Button
            android:id="@+id/buttonBreakEncryption"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_shape"
            android:drawableRight="@drawable/button_lockbroken"
            android:onClick="breakEncryption"
            android:paddingLeft="10dp"
            android:text="@string/action_break" />
        
        <Button
            android:id="@+id/buttonHashes"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_shape"
            android:drawableRight="@drawable/button_xor"
            android:onClick="calculateHashes"
            android:paddingLeft="10dp"
            android:text="@string/action_calculateHashes" />
        
        
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView_InMainActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-4246477151358404/4307342972" >
        </com.google.android.gms.ads.AdView>
    </RelativeLayout>

</RelativeLayout>